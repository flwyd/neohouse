{{#ch-box (concat 'Your Ranger Schedule ' year)}}
<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-light">
      <th>Starts</th>
      <th>Ends</th>
      <th>Description</th>
      <th>Position</th>
      <th class="text-right">Credits</th>
      <th>Actions</th>
    </thead>
    <tbody>
      {{#each slots as |slot slotidx| }}
        <tr>
          <td>{{slot.slot_begins_display}}</td>
          <td>{{slot.slot_ends_display}}</td>
          <td>
            {{#if slot.slot_url}}
              <a href="{{slot.slot_url}}"><i class="fas fa-info-circle"></i> {{slot.slot_description}}</a>
            {{else}}
              {{slot.slot_description}}
            {{/if}}
          </td>
          <td>{{slot.position_title}}</td>
          <td class="text-right">{{credits-format slot.credits}}</td>
          <td>
            <button {{action 'removeSlot' slot}} type="button" class="btn btn-danger">{{fa-icon 'trash-alt' type='fas'}}</button>
          </td>
        </tr>
      {{/each}}
      <tr>
        <td colspan="4" class="text-right">Total Possible Credits</td>
        <td class="text-right">{{credits-format totalCredits}}</td>
        <td>&nbsp;</td>
      </tr>
    </tbody>
  </table>
</div>

{{/ch-box}}
