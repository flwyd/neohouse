{{#if isUrl}}
<a href="{{routePath}}" class="{{tagClass}}">
  {{ch-sidebar-link-content iconUrl=iconUrl icon=icon iconType=iconType title=title badgeText=badgeText}}
</a>
{{else}}
  {{! ARG.. link-to cannot accept an empty dynamic segment}}
  {{#if routeArg}}
    {{#link-to routePath routeArg class=tagClass }}
      {{ch-sidebar-link-content iconUrl=iconUrl icon=icon iconType=iconType title=title badgeText=badgeText}}
    {{/link-to}}
  {{else}}
    {{#link-to routePath class=tagClass }}
      {{ch-sidebar-link-content iconUrl=iconUrl icon=icon iconType=iconType title=title badgeText=badgeText}}
    {{/link-to}}
  {{/if}}
{{/if}}
